<section class="relative h-screen w-full overflow-hidden bg-stone-900 text-white flex items-center justify-center">
    <!-- Background abstraction (replacing image for now) -->
    <div class="absolute inset-0 bg-linear-to-br from-stone-800 to-black z-0"></div>
    <div class="absolute inset-0 opacity-20 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] z-0"></div>

    <div class="relative z-10 text-center px-6 max-w-4xl mx-auto flex flex-col items-center gap-6">
        <span class="text-stone-400 tracking-[0.2em] uppercase text-sm animate-fade-in-up">The Ultimate Essential</span>
        <h1 class="text-4xl font-medium  md:text-8xl italic tracking-tighter leading-none animate-fade-in-up delay-100">
            Engineered for <br/> <span class="text-transparent  bg-clip-text bg-linear-to-r from-orange-400 to-amber-200">Comfort.</span>
        </h1>
        <p class="text-md md:text-md text-stone-300 max-w-2xl mt-4 leading-relaxed animate-fade-in-up delay-200">
            Heavyweight cotton. Perfect fit. The only sweatshirt you'll ever need to own.
        </p>
        
        <div class="mt-8 animate-fade-in-up delay-300">
            <a href="#action" class="bg-white text-black px-8 py-4 rounded-full font-medium sm:text-lg hover:bg-stone-200 transition-colors duration-300">
                Shop Now
            </a>
        </div>
    </div>
</section>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
    }
    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
